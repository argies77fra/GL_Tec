<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_marginBottom="24dp">

        <!--colmena-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/edt_colmena">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:id="@+id/edt_colmena_2"
                android:ems="10"
                android:enabled="false"
                android:hint="Colmena"
                />
        </android.support.design.widget.TextInputLayout>

        <!--colmenar-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/edt_colmena"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/edt_colmenar"  >
            <EditText
                android:id="@+id/edt_colmenar_2"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Colmenar"
                />
        </android.support.design.widget.TextInputLayout>

        <!--campo-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/edt_colmenar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/edt_campo"  >
            <EditText
                android:id="@+id/edt_campo_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:enabled="false"
                android:ems="10"
                android:hint="Campo"/>
        </android.support.design.widget.TextInputLayout>

       <!--estado activo-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/edt_campo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/edt_estado_actual"  >
            <EditText
                android:id="@+id/edt_estado_actual_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"
                android:ems="10"
                android:hint="Estado Actual"/>
        </android.support.design.widget.TextInputLayout>

        <!--nuevo estado-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/edt_estado_actual"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/spinner_nuevo_estado"
            android:hint="Seleccione Colmena">
            <Spinner
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/spinner_nuevo_estado_2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />
        </android.support.design.widget.TextInputLayout>

        <!--enfermedad-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/spinner_nuevo_estado"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:id="@+id/spinner_enfermedad"
            android:hint="Seleccione Colmena">
            <Spinner
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/spinner_enfermedad_2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />
        </android.support.design.widget.TextInputLayout>


        <Switch
            android:id="@+id/orfandad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginLeft="24sp"
            android:paddingLeft="5sp"
            android:layout_below="@+id/spinner_enfermedad"
            android:text="Esta Huerfana?"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/orfandad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textColorHint="@color/colorMiel"
            android:layout_marginBottom="24dp"
            android:id="@+id/edt_observaciones"  >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_observaciones_2"
                android:inputType="text"
                android:ems="10"
                android:hint="Observaciones"/>
        </android.support.design.widget.TextInputLayout>





    </RelativeLayout>
</ScrollView>